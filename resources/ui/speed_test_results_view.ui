<interface>
  <template class="SpeedTestResultsView" parent="GtkWidget">
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">36</property>
        <property name="halign">center</property>
        <child>
          <object class="GtkBox" id="wpm_accuracy_box">
            <property name="orientation">horizontal</property>
            <property name="spacing">12</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="width-request">200</property>
                <child>
                  <object class="GtkBox">
                    <property name="spacing">6</property>
                    <property name="halign">center</property>
                    <child>
                      <object class="GtkImage" id="personal_best_balancer">
                        <binding name="visible">
                          <lookup name="show-personal-best" type="SpeedTestResultsView">
                            <lookup name="root">personal_best_balancer</lookup>
                          </lookup>
                        </binding>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="wpm_label">
                        <style>
                          <class name="key-number"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkImage" id="personal_best">
                        <property name="tooltip-text" translatable="yes">New Personal Best for Configuration</property>
                        <property name="icon-name">arrow3-up-symbolic</property>
                        <binding name="visible">
                          <lookup name="show-personal-best" type="SpeedTestResultsView">
                            <lookup name="root">personal_best</lookup>
                          </lookup>
                        </binding>
                        <style>
                          <class name="accent"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Words per Minute</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkSeparator" id="separator"/>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="width-request">200</property>
                <child>
                  <object class="GtkLabel" id="accuracy_label">
                    <style>
                      <class name="key-number"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Accuracy</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="test_info_box">
            <property name="halign">center</property>
            <property name="homogeneous">1</property>
            <child>
              <object class="GtkBox">
                <property name="halign">center</property>
                <property name="spacing">6</property>
                <property name="tooltip-text" translatable="yes">Test Type</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">quotation-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="test_type_label"/>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="halign">center</property>
                <property name="spacing">6</property>
                <property name="tooltip-text" translatable="yes">Test Duration</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">timer-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="duration_label"/>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="language_box">
                <property name="halign">center</property>
                <property name="spacing">6</property>
                <property name="tooltip-text" translatable="yes">Text Language</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">language-symbolic</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="language_label"/>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="retry_button">
            <property name="label" translatable="yes">Retry</property>
            <property name="halign">center</property>
            <signal name="clicked" handler="on_retry_clicked" swapped="yes"/>
            <style>
              <class name="pill"/>
              <class name="suggested-action"/>
            </style>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
