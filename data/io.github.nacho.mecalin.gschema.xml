<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="io.github.nacho.mecalin" path="/io/github/nacho/mecalin/">
    <key name="current-lesson" type="u">
      <default>0</default>
      <summary>Current lesson</summary>
      <description>The current lesson number the user is on</description>
    </key>
    <key name="current-step" type="u">
      <default>0</default>
      <summary>Current step</summary>
      <description>The current step within the lesson</description>
    </key>
    <key name="show-hand-widget" type="b">
      <default>true</default>
      <summary>Show hand widget</summary>
      <description>Whether to show the hand widget during lessons</description>
    </key>
    <key name="show-keyboard-widget" type="b">
      <default>true</default>
      <summary>Show keyboard widget</summary>
      <description>Whether to show the keyboard widget during lessons</description>
    </key>
    <key name="use-finger-colors" type="b">
      <default>false</default>
      <summary>Use finger colors</summary>
      <description>Whether to use colors for keyboard keys and hand widget based on finger assignment</description>
    </key>

    <child name="state" schema="io.github.nacho.mecalin.state"/>
  </schema>

  <schema id="io.github.nacho.mecalin.state" path="/io/github/nacho/mecalin/state/">
    <child name="window" schema="io.github.nacho.mecalin.state.window"/>
  </schema>

  <schema id="io.github.nacho.mecalin.state.window" path="/io/github/nacho/mecalin/state/window/">
    <key name="maximized" type="b">
      <default>false</default>
    </key>

    <key name="size" type="(ii)">
      <default>(1024, 768)</default>
    </key>
  </schema>
</schemalist>
